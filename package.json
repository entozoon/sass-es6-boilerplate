{
  "name": "sass-es6-boilerplate",
  "version": "1.0.0",
  "description": "Simple Sass/es6 compilation.",
  "main": "index.html",
  "scripts": {
    "start": "npm-run-all --parallel compile-scss compile-js serve",
    "compile-scss": "node-sass src/scss --output dist/ --watch --recursive --output-style compressed",
    "compile-js": "babel src/js --out-file dist/app.js --presets=es2015 --watch",
    "serve": "browser-sync start --server --files \"dist/*.css, dist/*.js\""
  },
  "author": "michaelcook.tech",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-watch": "^2.0.6",
    "browser-sync": "^2.18.13",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.1.1"
  }
}
